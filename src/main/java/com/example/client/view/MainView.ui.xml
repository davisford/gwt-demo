<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.header td {
			background: #eee;
			border-bottom: 3px solid #666;
			padding: 0.5em;
			text-align: right;
			width: 100%;
		}
		
		.headerItem {
    		text-align: right;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM'>
		<g:north size='5'>
			<g:HorizontalPanel styleName="{style.header}">
				<g:HTML>Welcome back </g:HTML>
				<g:Label ui:field="nameLabel" styleName="{style.headerItem}" text="username"/>
				<g:Hyperlink ui:field="logoutLink" text="Logout" styleName="{style.headerItem}" targetHistoryToken="login" />
			</g:HorizontalPanel>
			
		</g:north>
		<g:center size="25">
			<g:Grid ui:field="grid"></g:Grid>
		</g:center>
		<g:west size='192'>
			<g:HTML>
				<ul>
					<li>Sidebar</li>
					<li>Sidebar</li>
					<li>Sidebar</li>
				</ul>
			</g:HTML>
		</g:west>
	</g:DockLayoutPanel>
</ui:UiBinder> 