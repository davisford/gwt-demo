<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.headerText {
			font-weight: bold;
		}
		
		.headerTable tr td {
			border: 0;
			margin: 0.2em, 0.2em, 0.2em, 0.2em;	
			padding: 5px;
			font-weight: bold;
			font-size: 11px;
			text-align: right;	
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM'>
		<g:north size='2'>
			<g:HorizontalPanel styleName="{style.headerTable}" horizontalAlignment="ALIGN_RIGHT" width="100%" >
				<g:Label styleName="{style.headerText}" ui:field="welcomeLabel">Welcome back</g:Label>
				<g:Hyperlink styleName="{style.headerText}" targetHistoryToken="login" ui:field="logoutLink">Logout</g:Hyperlink>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:Label>Body goes here</g:Label>
		</g:center>
		<g:west size='192'>
			<g:HTML>
				<ul>
					<li>Sidebar</li>
					<li>Sidebar</li>
					<li>Sidebar</li>
				</ul>
			</g:HTML>
		</g:west>
	</g:DockLayoutPanel>
</ui:UiBinder> 